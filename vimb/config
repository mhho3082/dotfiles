# Homepage that vimb opens if started without a URI.
set home-page=about:blank

# Path to the default download directory. If no download directory is set,
# download will be written into current directory. The following pattern will
# be expanded if the download is started '~/', '~user', '$VAR' and '${VAR}'.
set download-path=~/Downloads/

# Command with placeholder '%s' called if form field is opened with $EDITOR to
# spawn the editor-like `x-terminal-emulator -e vim %s'. To use Gvim as the
# editor, it's necessary to call it with `-f' to run it in the foreground.
set editor-command=wezterm -e "nvim %s"

# If enabled the inputbox will be hidden whenever it contains no text.
set input-autohide=true

# Enable or disable the spell checking feature.
set spell-checking=true

# Set comma separated list of spell checking languages to be used for
# spell checking.
set spell-checking-languages=en,zh

# Enable or disable support for WebGL on pages.
set webgl=true

# While typing a search command, show where the pattern typed so far matches.
set incsearch=true

# The font family to use as the default for content that does not specify a
# font.
set default-font=Noto Sans

# The font family used as the default for content using monospace font.
set monospace-font=JetBrainsMono Nerd Font

# The font family used as the default for content using sans-serif font.
set sans-serif-font=Noto Sans

# The font family used as the default for content using serif font.
set serif-font=Noto Serif

# The default font size used to display text.
set font-size=15

# Default font size for the monospace font.
set monospace-font-size=12

# Default Full-Content zoom level in percent. Default is 100.
set default-zoom=100

# Shortcuts allow the opening of an URI built up from a named template with
# additional parameters.
# Duckduckgo
shortcut-add d=https://www.duckduckgo.com/?q=$0
# Duckduckgo (lite)
shortcut-add dl=https://lite.duckduckgo.com/lite/?q=$0
# Google
shortcut-add g=https://www.google.com/search?q=$0
# YouTube
shortcut-add y=http://www.youtube.com/results?search_query=$0
# Wikipedia
shortcut-add w=https://en.wikipedia.org/w/index.php?search=$0
# Arch Wiki
shortcut-add aw=https://wiki.archlinux.org/index.php?search=$0

# Set the shortcut as the default, that is the shortcut to be used if no
# shortcut is given and the string to open is not an URI.
shortcut-default d

# Map page zoom in normal mode to keys commonly used across applications
# + (zoom in), - (zoom out), = (zoom reset)
nnoremap + zI
nnoremap - zO
nnoremap = zz

# GUI color settings
# Color scheme: Base16 Eighties (https://github.com/chriskempson/base16)
set completion-css=color:#ebdbb2;background-color:#3c3836;font:12pt JetBrainsMono Nerd Font;
set completion-hover-css=color:#ebdbb2;background-color:#3c3836;font:12pt JetBrainsMono Nerd Font;
set completion-selected-css=color:#ebdbb2;background-color:#504945;font:12pt JetBrainsMono Nerd Font;
set input-css=color:#ebdbb2;background-color:#3c3836;font:12pt JetBrainsMono Nerd Font;
set input-error-css=color:#fb4934;background-color:#3c3836;font:12pt JetBrainsMono Nerd Font;
set status-css=color:#fabd2f;background-color:#3c3836;font:12pt JetBrainsMono Nerd Font;
set status-ssl-css=color:#83a598;background-color:#3c3836;font:12pt JetBrainsMono Nerd Font;
set status-ssl-invalid-css=color:#fb4934;background-color:#3c3836;font:12pt JetBrainsMono Nerd Font;
