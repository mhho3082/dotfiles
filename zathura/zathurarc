# Open in fit-width mode
set adjust-open best-fit
set pages-per-row 1

# Use gruvbox (hard) colors for pdf display
set recolor-lightcolor "#1d2021" # background
set recolor-darkcolor "#ebdbb2"  # foreground
set recolor true                 # Begin in recolored mode
set recolor-keephue true         # Keep text colors
set recolor-reverse-video true   # Keep image colors

# Copy to clipboard
set selection-clipboard clipboard

# Modify first-page in side-by-side mode
# (use v to enter / leave side-by-side mode)
map v toggle_page_mode
map V set "first-page-column 1:1"
map <C-v> set "first-page-column 1:2"

# Use tildes in file names
set window-title-home-tilde true
set statusbar-home-tilde true

# Hide statusbar by default
set guioptions ""

# Use mupdf-like keybindings
map b scroll full-up
map d scroll half-down
map u scroll half-up
map i recolor
map p print
